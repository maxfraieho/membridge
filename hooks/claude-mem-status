#!/bin/bash
# Show sync status â€” prints project identity + doctor info
set -euo pipefail

MEMBRIDGE_DIR="${MEMBRIDGE_DIR:-/home/vokov/membridge}"

set -a
source "$MEMBRIDGE_DIR/config.env"
