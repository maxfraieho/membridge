#!/bin/bash
# Manual push â€” interactive, shows output in terminal
set -euo pipefail

MEMBRIDGE_DIR="${MEMBRIDGE_DIR:-$HOME/membridge}"

set -a
source "$MEMBRIDGE_DIR/config.env"
